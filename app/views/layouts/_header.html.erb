<header class="header">
  <div class="header-limiter">
    <%= link_to "", root_path, id: "logo", class: "logo"%>
    <div class="pull-left">
      <ul>
        <li class="dropdown navc product-cate">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" >
            <%= t ".category" %><b class="caret"></b>
          </a>
          <%= raw load_categories_menu %>
        </li>
      </ul>
    </div>
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to "", orders_path, class: "fa fa-history",
          title: t(".history"), rel: "tooltip" %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user"></i><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".settings"), edit_user_registration_path %></li>
            <li>
              <%= link_to t(".log_out"), destroy_user_session_path,
                method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user"></i> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".log_in"), new_user_session_path %></li>
            <li><%= link_to t(".sign_up"), new_user_registration_path %></li>
            <li><%= link_to t(".sign_in"), user_facebook_omniauth_authorize_path,
              class: "fa fa-facebook-official"%>
            </li>
          </ul>
        </li>
      <% end %>
      <li>
        <a href="/cart" class="fa fa-cart-arrow-down cart-head">
          (<%= session[:cart].present? ? session[:cart].size : 0 %>)
        </a>
      </li>
    </ul>
  </div>
</header>
