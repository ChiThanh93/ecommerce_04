<section class="container-fluid main">
  <div class="col-sm-8 col-sm-offset-2">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#home">
        <%= t ".your_cart" %></a>
      </li>
      <li><a data-toggle="tab" href="#menu1">
        <%= t ".customer_info" %></a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="home" class="tab-pane fade in active">
        <h3 class="text-center head"><%= t ".your_cart" %></h3>
          <table class="table-cart col-sm-10 col-sm-offset-1">
            <thead>
              <tr class="row">
                <th class="col-md-2"><%= t ".name" %></th>
                <th class="col-md-3"><%= t ".description" %></th>
                <th class="col-md-1"><%= t ".price" %></th>
                <th class="col-md-2"><%= t ".image" %></th>
                <th class="col-md-2"><%= t ".quantity" %></th>
                <th class="col-md-2"><%= t ".amount" %></th>
              </tr>
            </thead>
            <% @product_carts.each do |product_cart, quantity| %>
              <% unless product_cart.nil? %>
                <%= render "orders/order_row", product: product_cart,
                  quantity: quantity %>
              <% end %>
            <% end %>
            <tr>
              <td colspan="6" class="text-right col-sm-12 text-lg">
                <%= t ".total" %></td>
              <td class="text-right col-sm-12 text-lg"><%= @total_pay %></td>
            </tr>
          </table>
      </div>
      <div id="menu1" class="tab-pane fade">
        <h3 class="head"><%= t ".customer_info" %></h3>
          <div class="col-sm-10 col-sm-offset-1">
            <%= form_tag orders_path, method: :post do %>
              <div class="row form-group">
                <div class="col-sm-4">
                  <%= label_tag :name %>
                </div>
                <div class="col-sm-8">
                  <%= text_field_tag :name, @user.name, readonly: true,
                    class: "form-control" %>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-sm-4">
                  <%= label_tag :email %>
                </div>
                <div class="col-sm-8">
                  <%= text_field_tag :email, @user.email, readonly: true,
                    class: "form-control"  %>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-sm-4">
                  <%= label_tag :phone %>
                </div>
                <div class="col-sm-8">
                  <%= text_field_tag :phone, params[:phone], value: @user.phone,
                    class: "form-control"  %>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-sm-4">
                  <%= label_tag :shipping_address %>
                </div>
                <div class="col-sm-8">
                  <%= text_field_tag :address, params[:shipping_address],
                    class: "form-control" %>
                </div>
              </div class="row form-group">
              <div class="pull-right">
                <%= submit_tag t(".checkout"), class: "btn btn-buy" %>
              </div>
            <% end %>
      </div>
    </div>
  </div>
