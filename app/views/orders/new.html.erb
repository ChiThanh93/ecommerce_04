<section class="container-fluid">
    <div class="row">
    <div class="col-xs-6">
      <h3 class="text-center"><%= t ".your_cart" %></h3>
      <table>
        <thead>
          <tr class="row">
            <th class="col-md-1"><%= t ".name" %></th>
            <th class="col-md-3"><%= t ".description" %></th>
            <th class="col-md-1"><%= t ".price" %></th>
            <th class="col-md-3"><%= t ".image" %></th>
            <th class="col-md-3"><%= t ".quantity" %></th>
            <th class="col-md-1"><%= t ".amount" %></th>
          </tr>
        </thead>
        <% @product_carts.each do |product_cart, quantity| %>
          <% unless product_cart.nil? %>
            <%= render "orders/order_row", product: product_cart,
              quantity: quantity %>
          <% end %>
        <% end %>
        <tr>
          <td colspan="6" class="text-right col-sm-12 text-lg">
            <%= t ".total" %></td>
          <td class="text-right col-sm-12 text-lg"><%= @total_pay %></td>
        </tr>
      </table>
    </div>
    <div class="col-xs-5">
      <h3><%= t ".customer_info" %></h3>
      <div class="row">
        <%= form_tag orders_path, method: :post do %>
          <div>
            <%= label_tag :name %>
            <%= text_field_tag :name, @user.name, readonly: true,
              class: "form-control" %>
          </div>
          <div>
            <%= label_tag :email %>
            <%= text_field_tag :email, @user.email, readonly: true,
              class: "form-control"  %>
          </div>
          <div>
            <%= label_tag :phone %>
            <%= text_field_tag :phone, params[:phone], value: @user.phone,
              class: "form-control"  %>
          </div>
          <div>
            <%= label_tag :shipping_address %>
            <%= text_field_tag :address, params[:shipping_address],
              class: "form-control" %>
          </div>
          <div class="pull-right">
            <%= submit_tag t(".checkout"), class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
