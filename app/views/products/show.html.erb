<section class="container-fluid">
  <div class="row">
    <div class="container">
      <div class="col-sm-4">
        <%= image_tag @product.image? ?
          @product.image.url : Settings.image, class: "img-responsive" %>
      </div>
      <div class="col-sm-8">
        <table class="row">
          <tr >
            <td class="col-xs-4">
              <%= t".name" %>
            </td>
            <td class="col-xs-8">
              <h1><%= @product.name %></h1>
            </td>
          </tr>
          <tr>
            <td>
              <%= social_share_button_tag @product.name %>
            </td>
           </tr>
           <tr>
            <td class="col-xs-4">
              <%= t".price" %>
            </td>
            <td class="col-xs-8">
              <span style="color: green">
              <%= number_to_currency @product.price %>
              </span>
            </td>
          </tr>
          <% @specifications.each do |specification| %>
          <tr>
            <td class="col-xs-4">
              <%= specification.feature_type %>
            </td>
            <td  class="col-xs-8">
              <%= specification.feature_value %>
            </td>
          </tr>
          <% end %>
          <tr>
            <td class="col-xs-4">
              <%= t".description" %>
            </td>
            <td class="col-xs-8">
              <%= @product.description %>
            </td>
          </tr>
        </table>
        <div class="input-group">
          <div class="input-group-btn">
            <a id="add-cart-<%= @product.id %>" class="btn btn-sm btn-primary
              fa fa-cart-arrow-down add-product-cart" data="<%= @product.id %>">
              <%= t".add_to_cart" %>
            </a>
          </div>
        </div>
        <div>
          <%= rating_for @product, "quality", imdb_avg: true,
            disable_after_rate: true, enable_half: true %>
        </div>
        <% if user_signed_in? %>
          <%= raw load_favorite_product @product.id %>
        <% end %>
      </div>
      <div class="clearfix">  </div>
      <div id="comment" class="col-md-6">
        <span class="header-comment">
          <%= t ".write_your_comment" %>
        </span>
        <% if user_signed_in? %>
          <%= form_for [@product, @product.comments.new], remote: true do |f| %>
            <div class="form-group">
              <%= f.text_area :content, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit t(".comment"),
                class: "btn btn-primary fa fa-comment" %>
            </div>
          <% end %>
        <% else %>
          <%= t ".you_need" %>
          <%= link_to t(".login"), new_user_session_path %>
        <% end %>
        </div>
        <div class="list-comment col-md-6">
          <ul id="comments">
            <%= render @comments %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
