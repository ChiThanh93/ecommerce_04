<h3 class="text-center"><%= t ".product_info" %></h3>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_tag :back do %>
      <div>
        <%= label_tag :product_name %>
        <%= text_field_tag :name, @suggested_product.name, readonly: true,
          class: "form-control" %>
      </div>
      <div>
        <%= label_tag :product_description %>
        <%= text_field_tag :name, @suggested_product.description, readonly: true,
          class: "form-control" %>
      </div>
      <div class="pull-right">
        <%= submit_tag t(".back"), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
