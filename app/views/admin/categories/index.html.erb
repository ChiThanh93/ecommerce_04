<% provide :title, t(".all_categories") %>
<h1 class="head"><%= t ".all_categories" %></h1>
<div class="row">
  <div class="search-form">
    <%= search_form_for [:admin, @search], class: "form-inline" do |f| %>
      <div class="form-group">
        <%= f.label :name_cont, t(".name") %>
        <%= f.text_field :name_cont, class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.label :description_cont, t(".description") %>
        <%= f.text_field :description_cont, class: "form-control" %><br>
      </div>
      <div class= "col-md-2 pull-right" >
        <%= f.submit t(".search"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-12">
    <%= link_to t(".add_category"), "#category-modal", data: {toggle: "modal"},
      class: "btn btn-primary btn-add-category" %>
  </div>
</div>
<div class="table-responsive table-condensed ">
  <table class="responstable" id="list_category" cellspacing="5px">
    <tr>
      <th><%= t ".number" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".description" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
    <tbody>
      <%= render @categories%>
    </tbody>
  </table>
  <%= paginate @categories %>
</div>
<%= form_tag admin_categories_path , method: :post,
  id: "add-category-form" do %>
  <div id="category-modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3><%= t".add_category" %></h3>
        </div>
        <div class="modal-body">
          <form role="form">
            <div>
              <label><%= t ".category_parent" %></label>
              <div>
                <%= render "parent_category" %>
              </div>
            </div>
            <div>
              <label><%= t ".name" %></label>
              <%= text_field_tag :name, params[:name], class: "form-control" %>
            </div>
            <div>
              <label><%= t ".description" %></label>
              <%= text_area_tag :description, params[:description],
                class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
          <%= submit_tag t(".add"), class: "btn btn-primary"%>
            <button type="submit" class="btn btn-danger"
              data-dismiss="modal">
              <%= t ".cancel" %>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
